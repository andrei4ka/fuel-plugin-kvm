# Defaults for libvirt-bin initscript (/etc/init.d/libvirt-bin)
# This is a POSIX shell fragment

# Start libvirtd to handle qemu/kvm:
<% if @deb_default['start_libvirtd'] -%>
start_libvirtd="<%= @deb_default['start_libvirtd'] %>"
<% else -%>
start_libvirtd="yes"
<% end -%>

# options passed to libvirtd, add "-l" to listen on tcp
<% if @deb_default['libvirtd_opts'] -%>
libvirtd_opts="<%= @deb_default['libvirtd_opts'] %>"
<% else -%>
libvirtd_opts="-d"
<% end -%>

# pass in location of kerberos keytab
<% if @deb_default['KRB5_KTNAME'] -%>
export KRB5_KTNAME=<%= @deb_default['KRB5_KTNAME'] %>
<% else -%>
#export KRB5_KTNAME=/etc/libvirt/libvirt.keytab
<% end -%>
